  :root {
    --c-bg: #fbfbfb;
    --c-fg: #444444;
    --c-scroll: #d9d9d9;
    --c-scroll-hover: #bbbbbb;
    scrollbar-color: var(--c-scrollbar) var(--c-bg);
  }

  html {
    font-family: var(--font-ui, system-ui, sans-serif);
    background-color: var(--c-bg);
    color: var(--c-fg);
  }

  html.dark {
    --c-bg: #212129;
    --c-fg: #ddddf0;
    --c-scroll: #333333;
    --c-scroll-hover: #555555;
  }

  main {
    max-width: 70ch;
    min-height: calc(100vh - 4rem);
    margin: 0 auto;
    padding: 6rem 2rem 12rem;
  }

  ::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }
  ::-webkit-scrollbar-thumb {
    background-color: var(--c-scroll);
    border-radius: 4px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background-color: var(--c-scroll-hover);
  }
  ::-webkit-scrollbar-track {
    background-color: var(--c-bg);
  }

  @media screen and (max-width: 768px) {
    main {
      min-height: calc(100vh - 4.5rem);
    }
  }
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Always place the new root on top so
     element animations (like the theme icon) are visible in both directions */
  ::view-transition-old(root) {
    z-index: 1;
  }

  ::view-transition-new(root) {
    z-index: 999;
  }

  /* Claude-style font system */
  :root {
    /* UI sans (Claude uses Styrene B LC) */
    --font-ui: 'Styrene B LC', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    /* Assistant response serif (Claude uses Tiempos Text) */
    --font-response: 'Tiempos Text', Georgia, Cambria, 'Times New Roman', Times, serif;
    /* Optional UI serif (Claude sometimes uses Copernicus) */
    --font-ui-serif: 'Copernicus', Georgia, Cambria, 'Times New Roman', Times, serif;
    /* Monospace (Claude uses JetBrains Mono fallback) */
    --font-mono: 'JetBrains Mono', ui-monospace, 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Menlo, Consolas, 'Courier New', monospace;
  }

  /* Per-role chat fonts */
  .message.msg-assistant { font-family: var(--font-response); }
  .message.msg-user { font-family: var(--font-ui); }

  /* Chinese glyph override remains serif-friendly */
  .message.msg-assistant :lang(zh),
  .message.msg-assistant :lang(zh-CN),
  .message.msg-assistant :lang(zh-TW) {
    font-family: 'FangZhengLanTingKanSong', var(--font-response);
  }

  /* Code font across roles */
  .message pre,
  .message code,
  .message kbd,
  .message samp { font-family: var(--font-mono); }

  /* Modern drag and drop animations */
  @keyframes drag-fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes drag-scale-in {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes drag-pulse {
    0%, 100% {
      opacity: 0.6;
    }
    50% {
      opacity: 1;
    }
  }

  /* Drag overlay styles */
  .drag-overlay {
    position: fixed;
    inset: 0;
    z-index: 999;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    animation: drag-fade-in 0.15s ease-out;
  }

  html.dark .drag-overlay {
    background: rgba(0, 0, 0, 0.6);
  }

  .drag-card {
    background: var(--c-bg);
    border-radius: 16px;
    padding: 2.5rem 3rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    text-align: center;
    animation: drag-scale-in 0.2s ease-out;
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  html.dark .drag-card {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .drag-icon-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    margin: 0 auto 1.25rem;
    background: rgba(0, 0, 0, 0.04);
    border-radius: 12px;
  }

  html.dark .drag-icon-wrapper {
    background: rgba(255, 255, 255, 0.06);
  }

  .drag-icon {
    width: 36px;
    height: 36px;
    color: var(--c-fg);
    opacity: 0.7;
    stroke-width: 2;
    animation: drag-pulse 2s ease-in-out infinite;
  }

  .drag-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--c-fg);
    margin-bottom: 0.375rem;
    letter-spacing: -0.01em;
  }

  .drag-subtitle {
    font-size: 0.875rem;
    color: var(--c-fg);
    opacity: 0.5;
    font-weight: 400;
  }
</style>

<script>
const initTheme = () => {
  const darkSchema
    = window.matchMedia
    && window.matchMedia('(prefers-color-scheme: dark)').matches
  const storageTheme = localStorage.getItem('theme')
  if (storageTheme) {
    document.documentElement.classList.toggle(
      'dark',
      storageTheme === 'dark',
    )
  } else {
    document.documentElement.classList.toggle('dark', darkSchema)
  }
}

initTheme()
</script>

<script>
// Auto-reload on new version detection
if ('serviceWorker' in navigator) {
  let refreshing = false

  // Detect controller change and reload page
  navigator.serviceWorker.addEventListener('controllerchange', () => {
    if (refreshing) return
    refreshing = true
    window.location.reload()
  })

  // Check for updates periodically
  setInterval(() => {
    navigator.serviceWorker.ready.then((registration) => {
      registration.update()
    })
  }, 60 * 60 * 1000) // Check every hour
}
</script>
